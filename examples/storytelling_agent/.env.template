# Environment Variables Template for Storytelling Agent
# Copy this file to .env and fill in your actual values

# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# CrewAI API Key (if using CrewAI)
CREWAI_API_KEY=your_crewai_api_key_here

# Agent Configuration
AGENT_NAME=StorytellingAgent
AGENT_DESCRIPTION=AI agent for creative storytelling
AGENT_TEMPERATURE=0.8
AGENT_MAX_TOKENS=2000

# Storytelling specific settings
STORY_GENRE=fantasy
STORY_LENGTH=medium
STORY_TONE=engaging

# API endpoints
WEBHOOK_URL=https://your-webhook-url.com
NOTIFICATION_EMAIL=your-email@example.com

# Debug settings
DEBUG=false
LOG_LEVEL=info
